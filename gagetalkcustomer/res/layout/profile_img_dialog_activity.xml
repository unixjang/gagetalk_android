<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_popup_dark_background"
    android:layout_width="285dp"
    android:layout_height="wrap_content">

    <!-- title_layout-->
    <RelativeLayout
        android:id="@+id/rel_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="@string/profile_img"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sel_ic_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:background="@android:color/white"
        android:layout_below="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        />

    <!-- body layout -->
    <RelativeLayout
        android:id="@+id/rel_body"
        android:background="@color/body_layout"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_profile"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="35dp"
            android:src="@mipmap/ic_no_img"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_update"
        android:layout_below="@+id/rel_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.3dp"
        android:text="@string/img_update"
        android:textSize="16sp"
        android:textColor="@drawable/sel_txt_1"
        android:background="@drawable/sel_rnd_bottom_1_btn"/>


</RelativeLayout>