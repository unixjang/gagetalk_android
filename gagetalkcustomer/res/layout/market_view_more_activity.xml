<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_category"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:layout_marginRight="30dp"
                android:text=""
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_dark"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="@dimen/market_label_text_size"
                android:background="@drawable/rounded_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_market"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginTop="58dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_market"
                android:layout_centerHorizontal="true"
                android:textSize="21sp"
                android:layout_marginTop="28dp"
                android:text="덩킨도너츠(강남점)"/>
            <!-- Description layout : 유통기한 , 규격,  원산지, 설명 레이아웃 -->
            <LinearLayout
                android:id="@+id/lin_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginBottom="100dp"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 전화 번호 -->
                <LinearLayout
                    android:id="@+id/lin_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginLeft="30dp"
                            android:text="TEL"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="@dimen/market_label_text_size"
                            android:background="@drawable/rounded_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_tel"
                            android:layout_marginLeft="15dp"
                            android:text="02-598-3333"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:maxWidth="@dimen/market_label_max_width"
                            android:textSize="@dimen/market_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- 핸드폰 번호 -->
                <LinearLayout
                    android:id="@+id/lin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="30dp"
                            android:singleLine="true"
                            android:text="PHONE"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="@dimen/market_label_text_size"
                            android:background="@drawable/rounded_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_marginLeft="15dp"
                            android:text="010-xxxx-xxxx"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:maxWidth="@dimen/market_label_max_width"
                            android:textSize="@dimen/market_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- email -->
                <LinearLayout
                    android:id="@+id/lin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="30dp"
                            android:singleLine="true"
                            android:text="EMAIL"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="@dimen/market_label_text_size"
                            android:background="@drawable/rounded_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_id"
                            android:layout_marginLeft="15dp"
                            android:text="iamg0369@gmail.com"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:singleLine="true"
                            android:maxWidth="@dimen/market_label_max_width"
                            android:textSize="@dimen/market_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- email -->
                <LinearLayout
                    android:id="@+id/lin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginLeft="30dp"
                            android:text="ADDRESS"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="@dimen/market_label_text_size"
                            android:background="@drawable/rounded_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_marginLeft="15dp"
                            android:text="서울시 송파구 잠실 2동 ...."
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:maxWidth="@dimen/market_label_max_width"
                            android:textSize="@dimen/market_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- homepage -->
                <LinearLayout
                    android:id="@+id/lin_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="30dp"
                            android:text="HOMEPAGE"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="@dimen/market_label_text_size"
                            android:background="@drawable/rounded_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_homepage"
                            android:layout_marginLeft="15dp"
                            android:text="http://www.naver.com"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:textColor="@drawable/sel_txt_3"
                            android:maxWidth="@dimen/market_label_max_width"
                            android:textSize="@dimen/market_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- description -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/l_gray_s"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <!-- footer layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:weightSum="1"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/back"
            android:textColor="@drawable/sel_txt_1"
            android:background="@drawable/general_selector_l_gray"/>
        <Button
            android:id="@+id/btn_chat"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/chat"
            android:textColor="@drawable/sel_txt_1"
            android:background="@drawable/general_selector_d_gray"/>
    </LinearLayout>

</RelativeLayout>