<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_popup_dark_background"
    android:layout_width="285dp"
    android:layout_height="wrap_content">

    <!-- title_layout-->
    <RelativeLayout
        android:id="@+id/rel_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="@string/profile_name"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sel_ic_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:background="@android:color/white"
        android:layout_below="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        />

    <!-- body layout -->
    <RelativeLayout
        android:id="@+id/rel_body"
        android:background="@color/body_layout"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="@string/profile_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_textbox"/>
        <ImageView
            android:id="@+id/img_erase"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/edit_name"
            android:layout_marginRight="10dp"
            android:src="@drawable/sel_ic_erase"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_update"
        android:layout_below="@+id/rel_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.3dp"
        android:text="@string/name_update"
        android:textSize="16sp"
        android:textColor="@drawable/sel_txt_1"
        android:background="@drawable/sel_rnd_bottom_1_btn"/>


</RelativeLayout>