<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_layout"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lin_my"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">
                <TextView
                    android:id="@+id/txt_msg_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date_my"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="33dp"
                    android:background="@drawable/chat_my"
                    android:layout_alignParentRight="true"
                    android:text="Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium Text Medium TextMedium Text Medium TextMedium Text"
                    android:textColor="@color/general_text"
                    android:textSize="15.3sp" />
                <ImageView
                    android:id="@+id/img_new_my"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_new" />
                <TextView
                    android:id="@+id/txt_date_my"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:text="11월 26일 오후 10:40"
                    android:layout_alignRight="@+id/txt_msg_my"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_my"
                    android:src="@drawable/sel_ic_person"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    />
                <TextView
                    android:id="@+id/txt_name_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/no_name"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lin_peer"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="35dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_peer"
                    android:src="@drawable/sel_ic_person"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    />
                <TextView
                    android:id="@+id/txt_name_peer"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/no_name"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/txt_msg_peer"
                    android:layout_below="@+id/txt_date_peer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="33dp"
                    android:background="@drawable/chat_you"
                    android:text="Medium"
                    android:textColor="@color/general_text"
                    android:textSize="15.3sp" />
                <ImageView
                    android:id="@+id/img_new_peer"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/ic_new" />
                <TextView
                    android:id="@+id/txt_date_peer"
                    android:layout_alignLeft="@+id/txt_msg_peer"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="11월 26일 오후 10:40"
                    android:layout_marginLeft="30dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>