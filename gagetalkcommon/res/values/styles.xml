<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- set textCursor follow the text color -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <!-- Style for custom title bar : yet used -->
    <style name="CustomTitle" parent="android:Theme.Light">
        <item name="android:windowTitleSize">57dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#393939</item>
    </style>

    <!-- Chat Dialog Theme -->
    <style name="ChatDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:alertDialogStyle">@style/CustomProgressBarStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Dialog Theme -->
    <style name="MyDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:alertDialogStyle">@style/CustomProgressBarStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomProgressBarStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="DialogBtnAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
