<!-- title layout -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="@color/title_layout"
    android:id="@+id/rel_title">
    <LinearLayout
        android:id="@+id/lin_back"
        android:layout_width="40dp"
        android:layout_marginLeft="2dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="15dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/dashboard_line_margin"
            android:layout_marginRight="@dimen/dashboard_line_margin"
            android:src="@drawable/sel_ic_back"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="TITLE"
        android:textSize="19sp"
        android:textColor="@color/title_txt"
        android:gravity="center_vertical"
        android:singleLine="true"/>
</RelativeLayout>