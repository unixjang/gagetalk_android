<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_popup_dark_background"
    android:layout_width="285dp"
    android:layout_height="wrap_content">

    <!-- title_layout-->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:text="Login"/>
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/sel_ic_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"/>
    <View
        android:id="@+id/view_line"
        android:background="@android:color/white"
        android:layout_below="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        />

    <!-- body layout -->
    <RelativeLayout
        android:id="@+id/rel_body"
        android:background="@android:color/transparent"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_id"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_textbox"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:hint="@string/id"
            android:paddingLeft="13dp"/>
        <EditText
            android:id="@+id/edit_pw"
            android:password="true"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_id"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_textbox"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:hint="@string/password"
            android:paddingLeft="13dp"/>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/edit_pw"
            android:layout_alignStart="@+id/edit_pw"
            android:weightSum="1">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginRight="7.5dp"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:textSize="16sp"
                android:textColor="@drawable/sel_txt_2"
                android:background="@drawable/sel_btn_yellow_round"/>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="@string/signup"
                android:textSize="16sp"
                android:textColor="@drawable/sel_txt_2"
                android:background="@drawable/sel_btn_yellow_round"/>
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>